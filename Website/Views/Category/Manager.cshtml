@model Softox.Models.CategoryModel
@using (Ajax.BeginForm("SaveChanges", "Category",
    new AjaxOptions { OnSuccess = "OnSaveChanges" },
    new { @class = "form-horizontal" }))
{
    <div id="manager_modal" class="modal hide fade">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            @if (Model.cat_id <= 0)
            {
                <h3>Nouvelle catégorie</h3>
            }
            else
            {
                <h3>Modifier catégorie</h3>
            }
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.cat_id)
            <div class="control-group">
                <label class="control-label">@Html.LabelFor(m => m.cat_name)</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.cat_name)
                    <p>@Html.ValidationMessageFor(m => m.cat_name)</p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Fermer</a>
            <input type="submit" class="btn btn-primary" value="Sauvegarder" />
        </div>
    </div>
}